[Unit]
Description=Puma HTTP Server
After=network.target

[Service]
Type=simple

User=ubuntu

WorkingDirectory=/opt/categories-api

Environment=PUMA_DEBUG=1
Environment=APP_DIR=/opt/categories-api
# ExecStart=${APP_DIR}/bin/puma -C ${APP_DIR}/config/puma.rb ../config.ru
ExecStart=/home/ubuntu/.rvm/bin/rvm all do ${APP_DIR}/bin/puma -C ${APP_DIR}/config/puma.rb ${APP_DIR}/config.ru
Restart=always

[Install]
WantedBy=multi-user.target